#NEXTCLOUD CONTAINER 

# REDIRECT HTTP TRAFFIC TO https://[domain.com]
server {
	listen 80;
	server_name cloud.domain.com;
	return 301 https://cloud.domain.com$request_uri;
	}

server {  
    listen 443 ssl http2;
    server_name cloud.domain.com;

	#SSL settings
	include /config/nginx/strong-ssl.conf;

    client_max_body_size 0;
	
	### For iFraming comment line 260 in the response.php file: header('X-Frame-Options: SAMEORIGIN'); // Disallow iFraming from other domains
	### nextcloud/lib/private/legacy/response.php
	### comment with //
	
location / {
    proxy_pass https://192.168.1.34:4443/;
	proxy_max_temp_file_size 2048m;
    include /config/nginx/proxy.conf;
  }
}
