  <Networking>
    <Mode>host</Mode>
    <Publish/>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/cache/Docker/netdata</HostDir>
      <ContainerDir>/etc/netdata</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/proc</HostDir>
      <ContainerDir>/host/proc</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
    <Volume>
      <HostDir>/sys</HostDir>
      <ContainerDir>/host/sys</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
    <Volume>
      <HostDir>/etc</HostDir>
      <ContainerDir>/host/etc</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
    <Volume>
      <HostDir>/dev</HostDir>
      <ContainerDir>/host/dev</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/Docker/netdata/custom/</HostDir>
      <ContainerDir>/custom</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/var/run/docker.sock</HostDir>
      <ContainerDir>/var/run/docker.sock</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
  </Data>
  <Environment/>
  <Config Name="Host Path 1" Target="/etc/netdata" Default="/mnt/cache/appdata/netdata" Mode="rw" Description="Container Path: /etc/netdata" Type="Path" Display="always" Required="true" Mask="false">/mnt/cache/Docker/netdata</Config>
  <Config Name="Host Path 2" Target="/host/proc" Default="/proc" Mode="ro" Description="Container Path: /host/proc" Type="Path" Display="always" Required="true" Mask="false">/proc</Config>
  <Config Name="Host Path 3" Target="/host/sys" Default="/sys" Mode="ro" Description="Container Path: /host/sys" Type="Path" Display="always" Required="true" Mask="false">/sys</Config>
  <Config Name="Host Path 4" Target="/host/etc" Default="" Mode="ro" Description="Container Path: /host/etc" Type="Path" Display="always" Required="false" Mask="false">/etc</Config>
  <Config Name="Host Path 5" Target="/host/dev" Default="" Mode="ro" Description="Container Path: /host/dev" Type="Path" Display="always" Required="false" Mask="false">/dev</Config>
  <Config Name="Custom page" Target="/custom" Default="" Mode="rw" Description="Container Path: /custom" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/Docker/netdata/custom/</Config>
  <Config Name="Docker names" Target="/var/run/docker.sock" Default="" Mode="ro" Description="Container Path: /var/run/docker.sock" Type="Path" Display="always" Required="false" Mask="false">/var/run/docker.sock</Config>
